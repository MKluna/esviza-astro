---
const projects = [
  { title: 'Casa Moderna', image: '/images/project1.jpg', category: 'Residencial' },
  { title: 'Oficinas Eco-friendly', image: '/images/project2.jpg', category: 'Comercial' },
  { title: 'Museo de Arte', image: '/images/project3.jpg', category: 'Cultural' },
  { title: 'Complejo Deportivo', image: '/images/project4.jpg', category: 'Deportivo' },
];
---

<section id="projects" class="py-20 bg-secondary">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-serif font-bold text-center mb-12">Nuestros Proyectos</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {projects.map((project) => (
        <div class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform duration-300 hover:scale-105">
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
            <p class="text-gray-600">{project.category}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-12">
      <a href="/proyectos" class="inline-block bg-primary text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-opacity-90 transition-all duration-300">
        Ver Todos los Proyectos
      </a>
    </div>
  </div>
</section>